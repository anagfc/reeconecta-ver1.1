@using System.Security.Claims
@model IEnumerable<reeconecta.Models.Produto>

@{
    ViewData["Title"] = "Marketplace";
    var usuarioLogadoId = User.FindFirstValue(System.Security.Claims.ClaimTypes.NameIdentifier);

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

}

<div class="container mt-4">

    <!-- BANNER -->
    <div class="mb-4">
        <div class="bg-light border rounded d-flex align-items-center justify-content-center"
             style="height: 180px;">
            <picture>
                <source srcset="/marketplace-banner-celular.png" media="(max-width: 768px)" width="100%">

                <img src="~/marketplace-banner2.png" alt="Banner Marketplace ReeConecta" width="1280px" />
            </picture>
        </div>
    </div>

    <!-- LINKS SUPERIORES -->
    <div class="d-flex justify-content-center gap-3 mb-4">
        <a asp-controller="Produtos"
           asp-action="MeusProdutos"
           class="btn btn-outline-secondary shadow-sm">
            Meus produtos
        </a>

        <a asp-controller="Produtos"
           asp-action="MinhasReservas"
           class="btn btn-outline-success shadow-sm">
            Minhas Reservas
        </a>

        <a asp-action="Create"
           class="btn btn-outline-primary shadow-sm">
            Anuncie seu produto
            <i class="bi bi-plus-circle"></i>
        </a>
    </div>

    <div class="row">

        <!-- ===================================================== -->
        <!--                      FILTROS                          -->
        <!-- ===================================================== -->
        <aside class="col-md-3 mb-4">
            <h5 class="fw-bold mb-3">Filtros</h5>

            <form method="get">

                <!-- BUSCA -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Buscar</label>
                    <input name="busca"
                           class="form-control"
                           placeholder="Digite o nome do produto..."
                           value="@Context.Request.Query["busca"]">
                </div>

                <!-- CIDADE -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Cidade</label>
                    <select name="cidade" class="form-select">
                        <option value="">Todas</option>
                        @foreach (var c in ViewBag.Cidades)
                        {
                            <option value="@c"
                                    selected="@(Context.Request.Query["cidade"] == c)">
                                @c
                            </option>
                        }
                    </select>
                </div>

                <!-- CONDIÇÃO -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Condição</label>
                    <select name="condicao" class="form-select">
                        <option value="">Todas</option>
                        <option value="Novo" selected="@(Context.Request.Query["condicao"] == "Novo")">Novo</option>
                        <option value="Seminovo" selected="@(Context.Request.Query["condicao"] == "Seminovo")">Seminovo</option>
                        <option value="Usado" selected="@(Context.Request.Query["condicao"] == "Usado")">Usado</option>
                    </select>
                </div>

                <button class="btn btn-primary w-100 mt-2" type="submit">Aplicar Filtros</button>

            </form>
        </aside>

        <!-- ===================================================== -->
        <!--                   LISTA DE PRODUTOS                   -->
        <!-- ===================================================== -->
        <section class="col-md-9">

            <!-- ORDENAR -->
            <div class="d-flex justify-content-between align-items-center mb-4">

                <form method="get" class="d-flex gap-3 align-items-center">

                    <input type="hidden" name="busca" value="@Context.Request.Query["busca"]" />
                    <input type="hidden" name="cidade" value="@Context.Request.Query["cidade"]" />
                    <input type="hidden" name="condicao" value="@Context.Request.Query["condicao"]" />

                    <select name="ordenar" class="form-select w-auto">
                        <option value="">Mais recentes</option>
                        <option value="preco_asc" selected="@(Context.Request.Query["ordenar"] == "preco_asc")">Preço ↑</option>
                        <option value="preco_desc" selected="@(Context.Request.Query["ordenar"] == "preco_desc")">Preço ↓</option>
                        <option value="titulo_asc" selected="@(Context.Request.Query["ordenar"] == "titulo_asc")">Título A-Z</option>
                        <option value="titulo_desc" selected="@(Context.Request.Query["ordenar"] == "titulo_desc")">Título Z-A</option>
                    </select>

                    <button class="btn btn-secondary" type="submit">Ordenar</button>
                </form>
            </div>

            <!-- GRID DE PRODUTOS -->
            <div class="row g-4">
                @foreach (var item in Model)
                {
                    var isAnunciante = usuarioLogadoId == item.AnuncianteId.ToString();
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm border-0">

                            <div class="bg-light d-flex align-items-center justify-content-center"
                                 style="height: 200px;">

                                @if (!string.IsNullOrEmpty(item.Imagem))
                                {
                                    <img src="@item.Imagem"
                                         class="img-fluid rounded"
                                         style="max-height:180px; object-fit:cover;" />
                                }
                                else
                                {
                                    <i class="bi bi-image"
                                       style="font-size: 2rem; color: gray;"></i>
                                }
                            </div>

                            <div class="card-body text-center">
                                <h6 class="fw-semibold">@item.Titulo</h6>

                                <p class="mb-1 text-muted">
                                    R$ @item.Preco.ToString("N2")
                                </p>

                                <p class="mb-1 text-muted">
                                    @item.Bairro, @item.Cidade
                                </p>

                                <div class="produto-card" style="position: relative;">

                                    @{
                                        bool reservado = item.ReservasProduto?.Any(r =>
                                        r.Status == StatusReserva.Pendente) ?? false;
                                    }

                                    @if (!isAnunciante)
                                    {
                                        if (reservado)
                                        {
                                        <button class="btn btn-secondary btn-sm" disabled>
                                            Reservado
                                        </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-primary btn-sm btn-reservar"
                                                    data-id="@item.Id">
                                                Tenho interesse
                                            </button>
                                        }
                                    }

                                    <button class="btn btn-outline-secondary btn-sm btn-detalhes"
                                            data-id="@item.Id">
                                        Detalhes
                                    </button>

                                    <div class="reserva-feedback
                                                    position-absolute
                                                    top-0
                                                    start-50
                                                    translate-middle-x
                                                    w-100 mt-2"
                                         style="z-index: 1000;"></div>
                                </div>

                            </div>

                        </div>
                    </div>
                }
            </div>

        </section>
    </div>

</div>

<!-- MODAL DE DETALHES -->
<div class="modal fade"
     id="modalDetalhes"
     tabindex="-1"
     aria-hidden="true">

    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Detalhes do Produto</h5>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body" id="conteudoModalDetalhes">
                Carregando...
            </div>

        </div>
    </div>

</div>

@section Scripts {
    <script>
        document.addEventListener("click", function (e) {

            const btn = e.target.closest(".btn-detalhes");
            if (!btn) return;

            e.preventDefault();
            let id = btn.dataset.id;

            let modal = new bootstrap.Modal(document.getElementById("modalDetalhes"));
            modal.show();

            document.getElementById("conteudoModalDetalhes").innerHTML = "Carregando...";

            fetch(`/Produtos/Details/${id}`)
                .then(resp => resp.text())
                .then(html => {
                    document.getElementById("conteudoModalDetalhes").innerHTML = html;
                })
                .catch(err => {
                    document.getElementById("conteudoModalDetalhes").innerHTML =
                        "<div class='text-danger text-center'>Erro ao carregar detalhes.</div>";
                });
        });
    </script>
}

