@model reeconecta.Models.Produto

@{
    ViewData["Title"] = "Anunciar produto - Marketplace";
}

<link rel="stylesheet" href="~/css/produto-form.css" />

<div class="container my-5">

    <div class="text-center mb-5">
        <h1 class="fw-bold text-dark">
            Anunciar produto
        </h1>
        <p class="lead mt-2">
            Preencha as informações abaixo e publique seu REE na ReeConecta ♻️
        </p>
    </div>

    <div class="form-section shadow-sm border-0 rounded-4 p-4 p-md-5">
        <div class="card-body px-4 px-md-5 py-5">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                <div class="row g-4">

                    <div class="col-md-6">
                        <label asp-for="Titulo" class="form-label form-label">Título <span>*</span></label>
                        <div class="input-group grupo">
                            <span class="input-group-text icone">
                                <i class="bi bi-tag-fill"></i>
                            </span>
                            <input asp-for="Titulo" class="form-control input" placeholder="Ex.: Notebook quebrado, 5 pilhas..." />
                        </div>
                        <span asp-validation-for="Titulo" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Preco" class="form-label form-label">Preço (R$) <span>*</span></label>
                        <div class="input-group grupo">
                            <span class="input-group-text icone">
                                <i class="bi bi-cash-stack"></i>
                            </span>
                            <input asp-for="Preco" class="form-control input" placeholder="Ex.: 0,00 ou 250,00" type="number" step="0.01" />
                        </div>
                        <span asp-validation-for="Preco" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Condicao" class="form-label form-label">Condição <span>*</span></label>
                        <div class="input-group grupo">
                            <span class="input-group-text icone">
                                <i class="bi bi-hand-thumbs-up"></i>
                            </span>
                            <select asp-for="Condicao" class="form-select input"
                                    asp-items="Html.GetEnumSelectList<reeconecta.Models.CondicaoProduto>()">
                                <option value="">Selecione...</option>
                            </select>
                        </div>
                        <span asp-validation-for="Condicao" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Bairro" class="form-label form-label">Bairro <span>*</span></label>
                        <div class="input-group grupo">
                            <span class="input-group-text icone">
                                <i class="bi bi-geo-alt-fill"></i>
                            </span>
                            <input asp-for="Bairro" class="form-control input" placeholder="Seu bairro" />
                        </div>
                        <span asp-validation-for="Bairro" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Cidade" class="form-label form-label">Cidade <span>*</span></label>
                        <div class="input-group grupo">
                            <span class="input-group-text icone">
                                <i class="bi bi-buildings"></i>
                            </span>
                            <input asp-for="Cidade" class="form-control input" placeholder="Sua cidade" />
                        </div>
                        <span asp-validation-for="Cidade" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Descricao" class="form-label form-label">Descrição</label>
                        <textarea asp-for="Descricao" class="form-control" rows="4"
                                  placeholder="Forneça mais detalhes sobre o produto..."></textarea>
                        <span asp-validation-for="Descricao" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label form-label">Imagem do Produto</label>

                        <label for="ImagemFile" class="upload-area">
                            <i class="bi bi-cloud-upload fs-1"></i>
                            <p class="mt-2">Clique para enviar uma imagem</p>
                        </label>

                        <input type="file" name="ImagemFile" id="ImagemFile" class="d-none"
                               accept="image/*" onchange="previewImagem(event)" />
                    </div>

                    <div class="col-md-6 text-center">
                        <label class="form-label form-label">Pré-visualização</label>

                        <div class="preview-container shadow-sm">
                            <img id="preview"
                                 src="https://via.placeholder.com/250x250?text=Prévia"
                                 class="preview-img">
                        </div>
                    </div>
                </div>

                <div class="mt-5 text-center">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>

                    <button type="submit" class="btn btn-success ms-3 shadow">
                        <i class="bi bi-check-circle"></i> Publicar Anúncio
                    </button>
                </div>

            </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function previewImagem(event) {
            const img = document.getElementById('preview');
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = e => img.src = e.target.result;
                reader.readAsDataURL(file);
            }
        }
    </script>
}
