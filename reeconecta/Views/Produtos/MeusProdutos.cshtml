@model IEnumerable<reeconecta.Models.Produto>

    @{
    ViewData["Title"] = "Meus Produtos";
    }

    <div class="container mt-5">
        <h3 style="text-align:center">Meus produtos</h3><br>

        <div style="text-align:center">
            <a asp-controller="Produtos" asp-action="Index" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
            <a asp-controller="Produtos" asp-action="Create" class="btn btn-outline-primary">
                Anunciar novo produto <i class="bi bi-plus-circle"></i>
            </a>
        </div><br>

        @if (!Model.Any())
        {
        <div class="text-center text-muted mt-5">
            <p>Você ainda não anunciou nenhum produto.</p>
        </div>
        }
        else
        {
        <div class="list-group">
            @foreach (var produto in Model)
            {
            <div class="list-group-item d-flex justify-content-between align-items-center py-3">
                <div class="d-flex align-items-center">
                    <img src="@produto.Imagem"
                         alt="Imagem do produto"
                         class="me-3"
                         style="width:120px; height:110px; object-fit:cover; border-radius:6px; border:1px solid #ddd;" />

                    <div>
                        <h5 class="mb-1 fw-semibold">@produto.Titulo</h5>
                        <p class="mb-0 text-muted">R$@produto.Preco.ToString("F2")</p>
                    </div>
                </div>

                <div>
                    @if (produto.StatusProduto == StatusProduto.Vendido)
                    {
                        <span class="badge bg-danger">Vendido</span>
                    }
                    <a asp-action="Details" asp-route-id="@produto.Id" class="btn btn-link text-secondary">
                        <i class="bi bi-eye fs-5"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@produto.Id" class="btn btn-link text-secondary">
                        <i class="bi bi-pencil fs-5"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@produto.Id" class="btn btn-link text-danger">
                        <i class="bi bi-trash fs-5"></i>
                    </a>
                </div>
            </div>
            }
        </div>
        }
    </div>
