@model IEnumerable<reeconecta.Models.ReservaProduto>

@{
    ViewData["Title"] = "Minhas Reservas";

    Func<reeconecta.Models.StatusReserva, string> statusClass = status =>
    {
        return status switch
        {
            reeconecta.Models.StatusReserva.Pendente => "text-warning fw-bold",
            reeconecta.Models.StatusReserva.Confirmada => "text-success fw-bold",
            reeconecta.Models.StatusReserva.Cancelada => "text-danger fw-bold",
            _ => "text-secondary"
        };
    };
}

<div class="container mt-5">
    <h3 style="text-align:center">Minhas Reservas</h3><br>

    <div style="text-align:start">
        <a asp-controller="Produtos" asp-action="Index" class="btn btn-outline-secondary me-2">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div><br>

    @if (!Model.Any())
    {
        <div class="text-center text-muted mt-5">
            <p>Você ainda não fez nenhuma reserva.</p>
        </div>
    }
    else
    {
        <div class="list-group">
            @foreach (var reserva in Model)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center py-3">
                    <div class="d-flex align-items-center">
                        <img src="@reserva.Produto?.Imagem"
                             alt="Imagem do produto"
                             class="me-3"
                             style="width:120px; height:110px; object-fit:cover; border-radius:6px; border:1px solid #ddd;" />

                        <div>
                            <h5 class="mb-1 fw-semibold">@reserva.Produto?.Titulo</h5>
                            <p class="mb-0 text-muted">R$@reserva.Produto?.Preco.ToString("F2")</p>
                            <p class="mb-0">
                                <strong>Status:</strong>
                                <span class="@statusClass(reserva.Status)">@reserva.Status</span>
                            </p>
                            <p class="mb-0"><small>Reservado em @reserva.DataReserva.ToString("dd/MM/yyyy")</small></p>
                        </div>
                    </div>

                    <div>
                        <button class="btn btn-link text-secondary btn-detalhes"
                                data-id="@reserva.ProdutoId">
                            <i class="bi bi-eye fs-5"></i>
                        </button>

                        @if (reserva.Status == reeconecta.Models.StatusReserva.Pendente)
                        {
                            <a asp-controller="Produtos" asp-action="CancelarReserva" asp-route-id="@reserva.Id"
                               class="btn btn-link text-danger" title="Cancelar reserva">
                                <i class="bi bi-x-circle fs-5"></i>
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- MODAL DE DETALHES -->

<div class="modal fade"
     id="modalDetalhes"
     tabindex="-1"
     aria-hidden="true">

    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Detalhes do Produto</h5>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body" id="conteudoModalDetalhes">
                Carregando...
            </div>

        </div>
    </div>

</div>

@section Scripts {
    <script>
        document.addEventListener("click", function (e) {
            const btn = e.target.closest(".btn-detalhes");
            if (!btn) return;

            e.preventDefault();
            let id = btn.dataset.id;

            let modal = new bootstrap.Modal(document.getElementById("modalDetalhes"));
            modal.show();

            document.getElementById("conteudoModalDetalhes").innerHTML = "Carregando...";

            fetch(`/Produtos/Details/${id}`)
                .then(resp => resp.text())
                .then(html => {
                    document.getElementById("conteudoModalDetalhes").innerHTML = html;
                })
                .catch(err => {
                    document.getElementById("conteudoModalDetalhes").innerHTML =
                        "<div class='text-danger text-center'>Erro ao carregar detalhes.</div>";
                });
        });
    </script>
}