﻿@using reeconecta.Models
@model IEnumerable<Produto>
@{
    ViewData["Title"] = "ReeConecta - Marketplace Sustentável de REEE";
}

<link rel="stylesheet" href="~/css/home.css" />

<header class="container-fluid hero-section text-center">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <img src="~/Logo REEConecta.png" width="100px" class="mb-4 rounded-circle shadow-lg" />
                <h1 class="display-4 fw-bold">ReeConecta: Marketplace Sustentável de REEE</h1>
                <p class="lead mt-3 mb-5">Conecte-se com pontos de coleta e negocie eletrônicos usados de forma transparente.</p>

                <div class="row justify-content-center mt-4">
                    <div class="col-lg-10 col-md-12">
                        <form asp-controller="Produtos" asp-action="Index" method="get">
                            <div class="search-input-container">
                                <input type="text" name="busca" class="form-control" placeholder="Buscar: iPhone, laptop, bateria..." value="">
                                <button type="submit" class="btn btn-primary fw-bold">
                                    <i class="bi bi-search me-1"></i> Buscar
                                </button>
                            </div>
                        </form>

                        @if (!User.Identity.IsAuthenticated)
                        {
                            <p class="text-white-50 mt-3">
                                <small>
                                    É novo por aqui?
                                    <a asp-controller="Usuarios" asp-action="Login" class="text-white fw-bold text-decoration-underline">Faça Login</a>
                                    para criar seus anúncios.
                                </small>
                            </p>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
</header>

<main class="container my-5">

    <section class="my-5 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="section-title">Nossas Vantagens 💡</h2>
                <p class="text-muted lead mb-5">Por que escolher a ReeConecta para seus REEE?</p>
            </div>
        </div>

        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="card feature-card h-100">
                    <div class="card-body">
                        <i class="bi bi-shield-lock-fill fs-1 text-primary mb-3"></i>
                        <h3 class="h5 fw-bold">Transações Seguras</h3>
                        <p class="text-secondary">Garantia de segurança e verificação de usuários.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card feature-card h-100">
                    <div class="card-body">
                        <i class="bi bi-recycle fs-1 text-success mb-3"></i>
                        <h3 class="h5 fw-bold">Impacto Ambiental</h3>
                        <p class="text-secondary">Ajude a promover a economia circular.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card feature-card h-100">
                    <div class="card-body">
                        <i class="bi bi-geo-alt-fill fs-1 text-primary mb-3"></i>
                        <h3 class="h5 fw-bold">Localização Fácil</h3>
                        <p class="text-secondary">Encontre pontos de coleta rapidamente.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <hr class="my-5">

    <section class="my-5 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="section-title">Anúncios Recentes 🔥</h2>
                <p class="text-muted lead">Confira os últimos eletrônicos disponíveis.</p>
            </div>
        </div>

        <div class="row mt-5">
            @if (Model != null && Model.Any())
            {
                @foreach (var produto in Model)
                {
                    bool reservado = false;
                    if (produto.ReservasProduto != null)
                    {
                        foreach (var reserva in produto.ReservasProduto)
                        {
                            if (reserva.Status == StatusReserva.Pendente)
                            {
                                reservado = true;
                                break;
                            }
                        }
                    }
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card card-product h-100">
                            @if (!string.IsNullOrEmpty(produto.Imagem))
                            {
                                <img src="@produto.Imagem" class="card-img-top" alt="@produto.Titulo" />
                            }
                            else
                            {
                                <img src="~/images/produtos/semimagem.png" class="card-img-top" alt="Sem imagem" />
                            }
                            <div class="card-body d-flex flex-column">
                                <h5 class="fw-bold mb-2">@produto.Titulo</h5>
                                <p class="fs-4 text-success fw-bolder mb-3">R$ @produto.Preco.ToString("N2")</p>
                                <p class="text-muted mb-2"><small><i class="bi bi-pin-map me-1"></i> @produto.Cidade - @produto.Bairro</small></p>
                                <div class="mt-auto pt-3 border-top">
                                    @if (reservado)
                                    {
                                        <span class="badge bg-warning text-dark mb-3">Reservado</span>
                                        <a asp-controller="Produtos" asp-action="Index" class="btn btn-outline-secondary w-100 fw-bold mt-2">Ver no Marketplace</a>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success mb-3">Disponível</span>
                                        <a asp-controller="Produtos" asp-action="Index" class="btn btn-primary w-100 fw-bold mt-2">Ver no Marketplace</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p class="text-muted">Nenhum produto disponível no momento. Seja o primeiro a anunciar!</p>
                    <a asp-controller="Produtos" asp-action="Create" class="btn btn-primary mt-3">Anunciar Produto</a>
                </div>
            }
        </div>

    </section>

    <hr class="my-5">

    <section class="my-5 py-5 testimonial-section">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="section-title">O que dizem sobre nós?</h2>
                <p class="text-muted lead mb-4">Experiências reais de usuários que transformaram seus eletrônicos.</p>
            </div>
        </div>

        <div id="testimonialCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="6000">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#testimonialCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#testimonialCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#testimonialCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
                <button type="button" data-bs-target="#testimonialCarousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
            </div>

            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="testimonial-card mx-auto">
                        <div class="testimonial-content">
                            <div class="quote-icon mb-3">
                                <i class="bi bi-quote"></i>
                            </div>
                            <p class="testimonial-text">"Plataforma excelente! Consegui vender meu notebook em menos de 24 horas. O processo foi muito simples e seguro."</p>
                            <div class="rating mb-3">
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                            </div>
                            <div class="testimonial-author">
                                <div class="author-avatar">
                                    <i class="bi bi-person-circle"></i>
                                </div>
                                <div class="author-info">
                                    <h5 class="author-name mb-1">Carlos Andrade</h5>
                                    <span class="author-location"><i class="bi bi-geo-alt-fill me-1"></i>São Paulo - SP</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="carousel-item">
                    <div class="testimonial-card mx-auto">
                        <div class="testimonial-content">
                            <div class="quote-icon mb-3">
                                <i class="bi bi-quote"></i>
                            </div>
                            <p class="testimonial-text">"Finalmente encontrei um destino correto para descartar meus eletrônicos. A plataforma me ajudou a fazer a diferença no meio ambiente."</p>
                            <div class="rating mb-3">
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                            </div>
                            <div class="testimonial-author">
                                <div class="author-avatar">
                                    <i class="bi bi-person-circle"></i>
                                </div>
                                <div class="author-info">
                                    <h5 class="author-name mb-1">Maria Eduarda</h5>
                                    <span class="author-location"><i class="bi bi-geo-alt-fill me-1"></i>Belo Horizonte - MG</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="carousel-item">
                    <div class="testimonial-card mx-auto">
                        <div class="testimonial-content">
                            <div class="quote-icon mb-3">
                                <i class="bi bi-quote"></i>
                            </div>
                            <p class="testimonial-text">"Iniciativa incrível! Ajuda o meio ambiente e gera renda extra. Recomendo para todos que querem dar um novo ciclo aos seus eletrônicos."</p>
                            <div class="rating mb-3">
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                            </div>
                            <div class="testimonial-author">
                                <div class="author-avatar">
                                    <i class="bi bi-person-circle"></i>
                                </div>
                                <div class="author-info">
                                    <h5 class="author-name mb-1">João Ribeiro</h5>
                                    <span class="author-location"><i class="bi bi-geo-alt-fill me-1"></i>Curitiba - PR</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="carousel-item">
                    <div class="testimonial-card mx-auto">
                        <div class="testimonial-content">
                            <div class="quote-icon mb-3">
                                <i class="bi bi-quote"></i>
                            </div>
                            <p class="testimonial-text">"Interface muito intuitiva e processo de negociação transparente. Consegui encontrar exatamente o que procurava e o vendedor foi muito atencioso."</p>
                            <div class="rating mb-3">
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-half"></i>
                            </div>
                            <div class="testimonial-author">
                                <div class="author-avatar">
                                    <i class="bi bi-person-circle"></i>
                                </div>
                                <div class="author-info">
                                    <h5 class="author-name mb-1">Ana Silva</h5>
                                    <span class="author-location"><i class="bi bi-geo-alt-fill me-1"></i>Rio de Janeiro - RJ</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Anterior</span>
            </button>

            <button class="carousel-control-next" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Próximo</span>
            </button>
        </div>
    </section>
</main>

<div class="container-fluid cta-section text-center py-5">
    <div class="container">
        <h2 class="display-5 fw-bold mb-3">
            Pronto para Reciclar ou Negociar?
        </h2>
        <p class="lead mb-4">Dê um novo ciclo ao seu eletrônico.</p>

        @if (User.Identity.IsAuthenticated)
        {
            <a asp-controller="Produtos" asp-action="Create" class="btn btn-light btn-lg rounded-pill px-5 fw-bold text-primary me-3 shadow-sm">
                <i class="bi bi-upload me-2"></i> Anunciar Agora
            </a>
        }
        else
        {
            <a asp-controller="Usuarios" asp-action="Login" class="btn btn-light btn-lg rounded-pill px-5 fw-bold text-primary me-3 shadow-sm">
                <i class="bi bi-upload me-2"></i> Anunciar Agora
            </a>
        }

    </div>
</div>


<script src="~/js/home.js"></script>
