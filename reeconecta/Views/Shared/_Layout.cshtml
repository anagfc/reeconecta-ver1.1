<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReeConecta</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/reeconecta.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="icon" type="image/x-icon" href="~/favico.ico" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 shadow-lg">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img width="150px" src="~/Nome-ReeConecta.png" alt="Logotipo Reeconecta" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Início</a>
                            </li>
                            @if (User.IsInRole("Administrador"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Index">Painel adminstrativo</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Produtos" asp-action="Index">Marketplace</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Pontos" asp-action="Index">Pontos</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item d-flex align-items-center gap-2">
                                <a class="btn btn-link text-decoration-none text-dark p-0" asp-area="" asp-controller="Usuarios" asp-action="Perfil" title="Meu Perfil">
                                    <i class="bi bi-person-circle" style="font-size: 1.5rem;"></i>
                                </a>
                                <span class="text-dark">
                                    Olá, <strong>@User.Identity.Name</strong>
                                </span>
                                <a class="btn btn-outline-danger btn-sm" asp-area="" asp-controller="Usuarios" asp-action="Logout" style="margin-left: 10px">
                                    <i class="bi bi-box-arrow-right"></i> Sair
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary btn-sm" asp-area="" asp-controller="Usuarios" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-section pt-5 pb-4">
        <div class="container">

            <div class="row">

                <div class="col-lg-4 col-md-6 mb-4">
                    <h5>Links Rápidos</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="SobreNos" class="text-decoration-none text-dark"><i class="bi bi-caret-right-fill text-success me-2"></i> Sobre Nós</a></li>
                        <li><a asp-controller="Home" asp-action="ComoFunciona" class="text-decoration-none text-dark"><i class="bi bi-caret-right-fill text-success me-2"></i> Como Funciona</a></li>
                        <li><a asp-controller="Home" asp-action="Ajuda" class="text-decoration-none text-dark"><i class="bi bi-caret-right-fill text-success me-2"></i> Ajuda</a></li>
                        <li><a asp-controller="Home" asp-action="TermosDeUso" class="text-decoration-none text-dark"><i class="bi bi-caret-right-fill text-success me-2"></i> Termos de Uso</a></li>
                    </ul>
                </div>

                <div class="col-lg-4 col-md-6 mb-4">
                    <h5>Fale Conosco</h5>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-envelope-fill text-success me-2"></i> contato@reeconecta.com</li>
                        <li><i class="bi bi-telephone-fill text-success me-2"></i> (31) 5555-0000</li>
                        <li><i class="bi bi-geo-alt-fill text-success me-2"></i> Belo Horizonte, MG</li>
                    </ul>
                </div>

                <div class="col-lg-4 col-md-6 mb-4 text-center text-lg-start">
                    <img src="~/Logo REEConecta.png" width="60px" class="mb-3 rounded-circle" />
                    <p class="small">Siga-nos:</p>
                    <div class="social-icons">
                        <a><i class="bi bi-facebook"></i></a>
                        <a><i class="bi bi-twitter"></i></a>
                        <a><i class="bi bi-instagram"></i></a>
                        <a><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>

            </div>

            <div class="row border-top pt-3 mt-3 border-secondary">
                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-0 small">&copy; 2025 - Reeconecta | Todos os direitos reservados.</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a class="small text-muted me-3">Termos de Privacidade</a>
                    <a class="small text-muted">Política de Cookies</a>
                </div>
            </div>

        </div>
    </footer>

                    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/reservar.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
