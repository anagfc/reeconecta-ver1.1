@model reeconecta.Models.Usuario

@{
    ViewData["Title"] = "Excluir Usuário";
}

<h1>Excluir</h1>

<h5>Tem certeza de que deseja excluir o usuário @Model.Nome?</h5>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Documento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Documento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipodePerfil)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipodePerfil)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cep)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cep)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Endereco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Endereco)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone01)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone01)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone02)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone02)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-light" asp-action="Index">
            <i class="bi bi-arrow-left-circle"></i> Voltar
        </a>

        <button class="btn btn-danger" type="submit">
            <i class="bi bi-trash"></i> Excluir
        </button>
    </form>
</div>
