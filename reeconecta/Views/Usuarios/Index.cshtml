@model IEnumerable<reeconecta.Models.Usuario>


@{
    ViewData["Title"] = "Usuários";
}

<link rel="stylesheet" href="~/css/produto-form.css" />

<div class="container my-5">

    <div class="text-center mb-4">
        <h1 class="fw-bold text-dark">Usuários cadastrados</h1>
        <p class="lead text-muted">
            @User.Identity.Name, como administrador, você pode acessar todos os usuários cadastrados na ReeConecta nesta página.
        </p>
    </div>

    <div class="form-section shadow-sm border-0 rounded-4 p-4">

        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6">
                    <div class="form-wrapper shadow-sm p-3 h-100">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="fw-bold mb-0 text-truncate" title="@item.Nome">@item.Nome</h5>
                            <span class="badge @(item.ContaAtiva ? "bg-success" : "bg-secondary")">
                                @(item.ContaAtiva ? "Ativa" : "Inativa")
                            </span>
                        </div>
                        <p class="text-muted small mb-1"><i class="bi bi-person-badge me-1"></i> Perfil: @item.TipodePerfil</p>
                        <p class="text-muted small mb-1">
                            <i class="bi bi-telephone me-1"></i>
                            @item.Telefone01
                            @(string.IsNullOrEmpty(item.Telefone02) ? "" : $" | {item.Telefone02}")
                        </p>
                        <p class="text-muted small mb-3"><i class="bi bi-envelope me-1"></i> @item.Email</p>

                        <div class="d-flex flex-wrap gap-2 mt-2">
                            <a class="btn btn-outline-primary btn-sm flex-fill"
                               asp-area="" asp-controller="Usuarios" asp-action="VerPerfil" asp-route-id="@item.Id">
                                <i class="bi bi-person-circle"></i> Perfil
                            </a>
                            <a class="btn btn-outline-warning btn-sm flex-fill"
                               asp-action="Relatorio" asp-route-id="@item.Id">
                                <i class="bi bi-bar-chart-fill"></i> Desempenho
                            </a>
                            <form class="d-inline" asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Tem certeza que deseja excluir este usuário?');">
                                <button class="btn btn-outline-danger btn-sm flex-fill" type="submit">
                                    <i class="bi bi-trash-fill"></i> Excluir
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center mt-4">
                <i class="bi bi-info-circle"></i> Nenhum usuário encontrado.
            </div>
        }
    </div>
</div>
