@model reeconecta.Models.Ponto

@{
    ViewData["Title"] = "Remover Ponto";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">

            <!-- Cabeçalho -->
            <div class="mb-4">
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
            </div>

            <!-- Card de Confirmação -->
            <div class="card shadow-lg border-0 rounded-4">

                <!-- Seção de Aviso -->
                <div class="alert alert-danger mb-0 rounded-top-4" role="alert">
                    <div class="d-flex align-items-center gap-3">
                        <i class="bi bi-exclamation-triangle" style="font-size: 2rem;"></i>
                        <div>
                            <h4 class="alert-heading mb-0">Confirmação de Exclusão</h4>
                            <p class="mb-0 small">Esta ação não pode ser desfeita</p>
                        </div>
                    </div>
                </div>

                <!-- Conteúdo -->
                <div class="card-body p-4">

                    <h5 class="fw-bold mb-4">Tem certeza que deseja remover este ponto?</h5>

                    <!-- Imagem -->
                    @if (!string.IsNullOrEmpty(Model.Imagem))
                    {
                        <div class="text-center mb-4">
                            <img src="@Model.Imagem" class="img-fluid rounded" style="max-height: 250px; object-fit: cover;" alt="@Model.NomePonto" />
                        </div>
                    }

                    <hr />

                    <!-- Informações do Ponto -->
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3">
                            <h6 class="fw-semibold text-muted">Nome do Ponto</h6>
                            <p class="fs-5 fw-bold">@Model.NomePonto</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h6 class="fw-semibold text-muted">Tipo</h6>
                            <p class="fs-5 fw-bold">
                                <span class="badge bg-info">@Model.Tipo</span>
                            </p>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h6 class="fw-semibold text-muted">Descrição</h6>
                        <p>@Model.DescricaoPonto</p>
                    </div>

                    <!-- Localização -->
                    <div class="bg-light p-3 rounded mb-4">
                        <h6 class="fw-semibold mb-3"><i class="bi bi-geo-alt"></i> Localização</h6>
                        <p class="mb-0"><strong>CEP:</strong> @Model.CepPonto</p>
                    </div>

                    <!-- Contato -->
                    <div class="bg-light p-3 rounded mb-4">
                        <h6 class="fw-semibold mb-3"><i class="bi bi-telephone"></i> Contato</h6>
                        <p class="mb-2">
                            <strong>@Model.TelefoneP01</strong>
                            @if (Model.WppTelP1)
                            {
                                <span class="badge bg-success ms-2">
                                    <i class="bi bi-whatsapp"></i> WhatsApp
                                </span>
                            }
                        </p>
                        @if (!string.IsNullOrEmpty(Model.TelefoneP02))
                        {
                            <p class="mb-0">
                                <strong>@Model.TelefoneP02</strong>
                                @if (Model.WppTelP2)
                                {
                                    <span class="badge bg-success ms-2">
                                        <i class="bi bi-whatsapp"></i> WhatsApp
                                    </span>
                                }
                            </p>
                        }
                    </div>

                    <hr />

                    <!-- Formulário de Exclusão -->
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger flex-grow-1">
                                <i class="bi bi-trash"></i> Confirmar Exclusão
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary flex-grow-1">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

